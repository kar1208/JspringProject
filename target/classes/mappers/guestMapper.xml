<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.JspringProject.dao.GuestDao">

	<select id="getGuestList" resultType="com.spring.JspringProject.vo.GuestVo">
		select * from guest order by idx desc;
	</select>

	<select id="guestArrayView" resultType="com.spring.JspringProject.vo.GuestVo">
		select * from guest order by idx;
	</select>
	
	<select id="guestArrayName" resultType="com.spring.JspringProject.vo.GuestVo">
		select * from guest order by name;
	</select>


	<insert id="getGuestInput">
		insert into guest values (default,#{vo.name},#{vo.content},#{vo.email},#{vo.homePage},#{vo.hostIp},default);
	</insert>
	
</mapper>